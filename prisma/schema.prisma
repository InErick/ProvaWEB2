generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Client{
  id String @id @default(uuid())
  name String
  email String @unique
  phone String
  deliveryAddres String
  @@map("clients")
}

model Driver{
  id String @id @default(uuid())
  name String
  phone String
  deliveryVehicle String
  @@map("drivers")
}

